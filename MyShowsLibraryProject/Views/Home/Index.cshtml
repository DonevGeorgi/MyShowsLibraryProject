@model HomeShowsServiceModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container bg-white bg-opacity-50 p-3" style="border-radius: 2em;">
    <div class="container text-center p-2 w-75">
        <h1>Welcome</h1>
        <h2>to MyShowLibraryProject</h2>
        <p class="p-2" style="font-size: 1.4em">
            Site made from fan for fans of movie, serie, anime and more, place where you can search
            something new to watch,leave review and comment, find out more information about your 
            favorite new and old shows.
        </p>
    </div>
    <p class ="text-center p-2" style="font-size: 1.4em">Here down below you can find some of our new added and highest rated shows.</p>
    <div class="p-1">
        <h2 class="text-center pb-3">Latest added movies</h2>
        <div>
            <div class="d-flex flex-wrap justify-content-between w-100 gap-2">
                @foreach (var movie in Model.Movies)
                {
                    <div class="card bg-transparent border-0 p-1" style="width: 300px; height: 460px">
                        <img class="w-100 h-100" src="@movie.PosterUrl" style="border-radius: 0.5rem;">
                        <div class="card-body p-0 m-0 position-absolute bottom-0 start-50 translate-middle-x">
                            <div class="card-title text-center">
                                <a asp-controller="Movie" asp-action="MovieDetails" asp-route-movieId="@movie.MovieId"
                                   class="card-title text-white text-decoration-none bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">
                                    @movie.Title
                                </a>
                            </div>
                            <div class="card-text text-white d-flex justify-content-between mb-2">
                                <span class="bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">@movie.YearOfRelease</span>
                                <span class="bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">@(movie.Rating == null ? "0.00" : movie.Rating)</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <hr />
    </div>
    <div>
        <h2 class="text-center pb-3">Latest added series</h2>
        <div>
            <div class="d-flex flex-wrap justify-content-between w-100 gap-2">
                @foreach (var serie in Model.Series)
                {
                    <div class="card bg-transparent border-0 p-1" style="width: 300px; height: 460px">
                        <img class="w-100 h-100" src="@serie.PosterUrl" style="border-radius: 0.5rem;">
                        <div class="card-body p-0 m-0 position-absolute bottom-0 start-50 translate-middle-x">
                            <div class="card-title text-center">
                                <a asp-controller="Serie" asp-action="SerieDetails" asp-route-serieId="@serie.SerieId"
                                   class="card-title text-white text-decoration-none bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">
                                    @serie.Title
                                </a>
                            </div>
                            <div class="card-text text-white d-flex justify-content-between mb-2">
                                <span class="bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">@(serie.EndYear == string.Empty ? serie.StartYear : serie.StartYear + " - " + serie.EndYear)</span>
                                <span class="bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">@(serie.Rating == null ? "0.00" : serie.Rating)</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <hr />
    </div>
    <h2 class="text-center pb-3">Highest-Rated Movie and Serie</h2>
    <div class="d-flex justify-content-around w-100 gap-2">
        <div class="card bg-transparent border-0 p-1" style="width: 300px;">
            <img class="w-100 h-100" src="@Model.HighestRatedMovies.PosterUrl" style="border-radius: 0.5rem;">
            <div class="card-body p-0 m-0 position-absolute bottom-0 start-50 translate-middle-x">
                <div class="card-title text-center">
                    <a asp-controller="Movie" asp-action="MovieDetails" asp-route-movieId="@Model.HighestRatedMovies.MovieId"
                       class="card-title text-white text-decoration-none bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">
                        @Model.HighestRatedMovies.Title
                    </a>
                </div>
                <div class="card-text text-white d-flex justify-content-between mb-2">
                    <span class="bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">@Model.HighestRatedMovies.YearOfRelease</span>
                    <span class="bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">@(Model.HighestRatedMovies.Rating == null ? "0.00" : Model.HighestRatedMovies.Rating)</span>
                </div>
            </div>
        </div>
        <div class="card bg-transparent border-0 p-1" style="width: 300px;">
            <img class="w-100 h-100" src="@Model.HighestRatedSeries.PosterUrl" style="border-radius: 0.5rem;">
            <div class="card-body p-0 m-0 position-absolute bottom-0 start-50 translate-middle-x">
                <div class="card-title text-center">
                    <a asp-controller="Serie" asp-action="SerieDetails" asp-route-serieId="@Model.HighestRatedSeries.SerieId"
                       class="card-title text-white text-decoration-none bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">
                        @Model.HighestRatedSeries.Title
                    </a>
                </div>
                <div class="card-text text-white d-flex justify-content-between mb-2">
                    <span class="bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">@(Model.HighestRatedSeries.EndYear == string.Empty ? Model.HighestRatedSeries.StartYear : Model.HighestRatedSeries.StartYear + " - " + Model.HighestRatedSeries.EndYear)</span>
                    <span class="bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">@(Model.HighestRatedSeries.Rating == null ? "0.00" : Model.HighestRatedSeries.Rating)</span>
                </div>
            </div>
        </div>
    </div>
</div>