@model TopicFormModel

@{
    ViewData["Title"] = "Topic form";
}

<div class="row">
    <div class=" container bg-black bg-opacity-50" style="border-radius: 1em">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <form asp-action="AddTopic" method="post">
                <div class="mb-3">
                    <label class="text-white" asp-for="@Model.Name" class="form-label-add-edit">Topic name</label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add new topic" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
