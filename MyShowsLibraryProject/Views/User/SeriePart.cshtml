@model IEnumerable<SeriesCardInfoServiceModel>

@{
    ViewData["Title"] = "Serie to Watch Later";
}

<div class="bg-white bg-opacity-50 d-flex flex-column p-2 gap-3" style="border-radius: 0.5em; text-shadow: 0px 0px 0px grey;">
    <div class="container">
        <div class="pb-3">
            <a class="btn btn-secondary" asp-controller="User" asp-action="MoviePart">To Movies</a>
        </div>

        @if (Model.Any())
        {
            <div class="containter bg-white bg-opacity-50 p-3 mt-3 mb-3" style="border-radius: 0.5em;">
                <div class="d-flex flex-wrap w-100 gap-2">
                    @foreach (var serie in Model)
                    {
                        <div class="card bg-transparent border-0 p-1" style="width: 300px; height: 460px">
                            <img class="w-100 h-100" src="@serie.PosterUrl" style="border-radius: 0.5rem;">
                            <div class="card-body p-0 m-0 position-absolute bottom-0 start-50 translate-middle-x">
                                <div class="card-title text-center">
                                    <a asp-controller="Serie" asp-action="SerieDetails" asp-route-serieId="@serie.SerieId"
                                       class="card-title text-white text-decoration-none bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">
                                        @serie.Title
                                    </a>
                                </div>
                                <div class="card-text text-white d-flex justify-content-between mb-2">
                                    <span class="bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">@(serie.EndYear == string.Empty ? serie.StartYear : serie.StartYear + " - " + serie.EndYear)</span>
                                    <span class="bg-black bg-opacity-75 p-1" style="border-radius: 0.5em;">@(serie.Rating == null ? "0.00" : serie.Rating)</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <h1 class="text-center">For now there are no series added!</h1>
        }
    </div>
