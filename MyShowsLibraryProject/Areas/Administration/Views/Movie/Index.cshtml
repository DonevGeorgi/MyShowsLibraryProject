@model List<MoviesInfoServiceModel>

@{
    ViewData["Title"] = "Movie managing page";
}

<div class="bg-white bg-opacity-50 d-flex flex-column p-2 gap-2" style="border-radius: 0.5em">
    <h1 class="text-center pt-2">Movies:</h1>
    <a asp-area="Administration" asp-action="Add" asp-controller="Movie" role="button" class="btn btn-lg" style="border-radius: 0.5em; background-color: rgb(255, 210, 0)">Add new movie</a>
    @foreach (var movie in Model)
    {
        <table class="table m-2">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Release Date</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.YearOfRelease</td>
                    <td class="text-center">
                        <a class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Edit</a>
                        <a class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    }
</div>
