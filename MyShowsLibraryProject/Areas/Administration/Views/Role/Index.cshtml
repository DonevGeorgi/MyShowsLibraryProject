@model IEnumerable<RoleInfoServiceModel>

@{
    ViewData["Title"] = "Role managing page";
}

<div class="bg-white bg-opacity-50 d-flex flex-column p-2 gap-2" style="border-radius: 0.5em">
    <h1 class="text-center pt-2">Roles:</h1>
    <a asp-area="Administration" asp-action="Add" asp-controller="Role" role="button" class="btn btn-lg" style="border-radius: 0.5em; background-color: rgb(255, 210, 0)">Add new role</a>
    @foreach (var role in Model)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Role name</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@role.Name</td>
                    <td class="text-end">
                        <a asp-area="Administration" asp-action="Edit" asp-controller="Role" asp-route-roleId="@role.RoleId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Edit</a>
                        <a asp-area="Administration" asp-action="Delete" asp-controller="Role" asp-route-roleId="@role.RoleId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    }
</div>
