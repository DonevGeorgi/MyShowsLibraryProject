@model IEnumerable<GenreInfoSeviceModel>

@{
    ViewData["Title"] = "Genre managing page";
}

<div class="bg-white bg-opacity-50 d-flex flex-column p-2 gap-2" style="border-radius: 0.5em">
    <h1 class="text-center pt-2">Movies:</h1>
    <a asp-area="Administration" asp-action="Add" asp-controller="Genre" role="button" class="btn btn-lg" style="border-radius: 0.5em; background-color: rgb(255, 210, 0)">Add new genre</a>
    @foreach (var genre in Model)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Genre name</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@genre.Name</td>
                    <td class="text-center">
                        <a asp-area="Administration" asp-action="Edit" asp-controller="Genre" asp-route-genreName="@genre.Name" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Edit</a>
                        <a asp-area="Administration" asp-action="Delete" asp-controller="Genre" asp-route-genreName="@genre.Name" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    }
</div>

