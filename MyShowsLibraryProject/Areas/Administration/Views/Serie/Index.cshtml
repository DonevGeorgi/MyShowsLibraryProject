@model IEnumerable<SerieInfoServiceModel>

@{
    ViewData["Title"] = "Serie managing page";
}

<div class="bg-white bg-opacity-50 d-flex flex-column p-2 gap-2" style="border-radius: 0.5em">
    <h1 class="text-center pt-2">Series:</h1>
    <a asp-area="Administration" asp-action="Add" asp-controller="Serie" role="button" class="btn btn-lg" style="border-radius: 0.5em; background-color: rgb(255, 210, 0)">Add new serie</a>
    @foreach (var serie in Model)
    {
        <table class="table m-2">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Release Date</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@serie.Title</td>
                    <td>@(serie.YearOfEnd == string.Empty ? serie.YearOfStart : serie.YearOfStart + " - " + serie.YearOfEnd)</td>
                    <td class="text-center">
                        <a asp-area="Administration" asp-action="Edit" asp-controller="Serie" asp-route-serieId="@serie.SeriesId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Edit</a>
                        <a asp-area="Administration" asp-action="Delete" asp-controller="Serie" asp-route-serieId="@serie.SeriesId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Delete</a>
                        <a asp-area="Administration" asp-action="Index" asp-controller="Season" asp-route-seriesId="@serie.SeriesId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Add Season</a>
                        <a asp-area="Administration" asp-action="AddGenreToSerie" asp-controller="SerieGenre" asp-route-serieId="@serie.SeriesId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Add Genre</a>
                        <a asp-area="Administration" asp-action="RemoveGenreFromSerie" asp-controller="SerieGenre" asp-route-serieId="@serie.SeriesId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Remove Genre</a>
                        <a asp-area="Administration" asp-action="AddCrewToSerie" asp-controller="CrewSerie" asp-route-serieId="@serie.SeriesId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Add Crew</a>
                        <a asp-area="Administration" asp-action="RemoveCrewFromSerie" asp-controller="CrewSerie" asp-route-serieId="@serie.SeriesId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Remove Crew</a>
                    </td>
                </tr>
            </tbody>
        </table>
    }
</div>
