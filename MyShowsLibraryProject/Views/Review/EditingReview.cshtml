@model ReviewFormModel

@{
    ViewData["Title"] = "Edditing Review";
}

<div class="container">

    <h2 class="text-white">Edit review</h2>

    <form asp-action="EditingReview" asp-controller="Review" method="post">
        <div class="mb-3">
            <label class="text-white" asp-for="@Model.Rating">Rating</label>
            <input asp-for="@Model.Rating" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Rating" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="text-white" asp-for="@Model.Content">Content</label>
            <input asp-for="@Model.Content" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Content" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Write reivew" />
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}