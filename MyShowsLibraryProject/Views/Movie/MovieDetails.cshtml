@model MoviesDetailsServiceModel

@{
    ViewData["Title"] = "Movie Detail";
}

<div class="bg-white bg-opacity-50 d-flex flex-column p-2 gap-2" style="border-radius: 0.5em">
    <div class="container d-flex flex-row">
        <div>
            <img style="height: 360px;" src="@Model.PosterUrl">
        </div>
        <div class="container d-flex flex-column gap-2 p-2">
            <div class="container d-flex justify-content-center p-1">
                <span class="fw-bolder">@Model.Title</span>
            </div>
            <div class="d-flex flex-column">
                <span>@Model.DateOfRelease</span>
                <span>@string.Join(", ", Model.Genres.Select(n => n.Name))</span>
                <span>@Model.Duration</span>
                <span>@Model.OriginalAudioLanguage</span>
            </div>
        </div>
    </div>
    <div class="container p-2">
        <p>@Model.Summary</p>
        <a href="@Model.ForMoreSummaryUrl" class="text-decoration-none text-black fw-bold">For more information you can visit this link:</a>
    </div>
    <div class="container p-2 d-flex justify-content-center">
        <iframe width="1280" height="720" src="@Model.TrailerUrl" allowfullscreen></iframe>
    </div>
    <div class="container p-2 d-flex gap-1 flex-wrap">
        @foreach (var crew in Model.Crews)
        {
            <div class="d-flex flex-column gap-1 p-3" style="max-height: 75%; max-width: 33%;">
                <div>
                    <img class="h-auto w-100 d-block" style="border-radius: 0.5em" src="@crew.PictureUrl" />
                </div>
                <div class="d-flex flex-column p-2 align-items-center">
                    <a asp-action="" asp-controller="" class="text-black text-decoration-none fw-bold">@crew.Name</a>
                    <p class="mb-0">@string.Join(", ", crew.Roles.Select(r => r.Name))</p>
                </div>
            </div>
        }
    </div>
