@model PostsInfoServiceModel

<div class="d-flex flex-column">
    <div class="d-flex justify-content-between">
        <span class="m-2 p-2 fw-bold">@Model.UserName</span>
    </div>
    <div class="d-flex text-black p-3 m-1" style="border: 1px solid  grey;  border-radius: 0.5em;">
        @Model.PostBody
    </div>

    <div class="p-1">
        @if (User.GetId() == Model.UserUsername)
        {
            <a asp-area="default" asp-action="EditPost" asp-controller="Forum" asp-route-postId="@Model.PostId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Edit</a>
            <a asp-area="default" asp-action="DeletePost" asp-controller="Forum" asp-route-postId="@Model.PostId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Delete</a>
            <a asp-area="default" asp-action="AddReply" asp-controller="Forum" asp-route-postId="@Model.PostId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Add reply</a>
        }
    </div>
</div>
<hr style="border: 3px solid black; border-radius: 0.5em;" />