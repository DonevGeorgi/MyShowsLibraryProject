@model AllPostInfoServiceModel

@{
    ViewData["Title"] = "Topic posts page";
}

<div class="bg-white bg-opacity-50 p-4" style="border-radius: 0.5em;">
    <h2 class="text-center fw-bold">Reviews:</h2>

    <div class="container w-75 h-25 text-center p-2" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">
        <a asp-area="" asp-action="AddPostToTopic" asp-controller="Forum" asp-route-topicId="@Model" asp class="text-decoration-none text-black">Add posts</a>
    </div>

    <div class="bg-white bg-opacity-50 p-4" style="border-radius: 0.5em;">
        @foreach (var post in Model.Posts)
        {
            <partial name="_PostsDisplayPartial" model="@post" />

            <div class="p-1">
                @if (User.GetId() == post.UserUsername)
                {
                    <a asp-area="default" asp-action="EditPost" asp-controller="Forum" asp-route-postId="@post.PostId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Edit</a>
                    <a asp-area="default" asp-action="DeletePost" asp-controller="Forum" asp-route-postId="@post.PostId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Delete</a>
                }
            </div>
        }
    </div>
</div>