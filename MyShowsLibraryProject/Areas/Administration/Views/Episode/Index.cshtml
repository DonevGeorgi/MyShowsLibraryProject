@model List<EpisodeInfoServiceModel>

@{
    ViewData["Title"] = "Episode managing page";
}

<div class="bg-white bg-opacity-50 d-flex flex-column p-2 gap-2" style="border-radius: 0.5em">
    <h1 class="text-center pt-2">Episode:</h1>
    <a asp-area="Administration" asp-action="Add" asp-controller="Episode" role="button" class="btn btn-lg" style="border-radius: 0.5em; background-color: rgb(255, 210, 0)">Add new episode</a>
    @foreach (var episode in Model)
    {
        <table class="table m-2">
            <thead>
                <tr>
                    <th scope="col">Season number</th>
                    <th scope="col">Episode number</th>
                    <th scope="col">Release date</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@episode.SeasonNumber</td>
                    <td>@episode.EpisodeNumeration</td>
                    <td>@episode.ReleaseDate</td>
                    <td class="text-end">
                        <a asp-area="Administration" asp-action="Edit" asp-controller="Episode" asp-route-episodeId="@episode.EpisodeId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Edit</a>
                        <a asp-area="Administration" asp-action="Delete" asp-controller="Episode" asp-route-episodeId="@episode.EpisodeId" class="btn m-1" role="button" style="border-radius: 0.5em; background-color: rgb(255, 210, 0);">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    }
</div>
